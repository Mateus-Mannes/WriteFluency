{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WriteFluencyDb;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Trace"
    }
  },
  "AllowedClients": "https://writefluency.com,http://localhost:4200",
  "ExternalApis": {
    "OpenAI": {
      "BaseAddress": "https://api.openai.com/",
      "Routes": {
        "Completion": "v1/chat/completions",
        "Speech": "v1/audio/speech"
      },
      "Key": "{OPEN_AI_API_KEY}"
    },
    "TextToSpeech": {
      "BaseAddress": "https://texttospeech.googleapis.com/",
      "Routes": {
        "TextSynthesize": "v1/text:synthesize"
      },
      "KeyName": "X-goog-api-key",
      "Key": "{TEXT_TO_SPEECH_API_KEY}"
    },
    "News": {
      "BaseAddress": "https://api.thenewsapi.com/",
      "Routes": {
        "TopStories": "v1/news/top"
      },
      "Key": "{NEWS_API_KEY}"
    }
  },
  "Jwt": {
    "Issuer": "api.writefluency.com",
    "Audience": "writefluency.com",
    "Key": "{JWT-SECRET-KEY}"
  },
  "Authentication": {
    "Google": {
      "ClientId": "{GOOGLE_CLIENT_ID}",
      "ClientSecret": "{GOOGLE_CLIENT_SECRET}"
    }
  },
  "Propositions": {
    "IsWorkerActive": true,
    "DailyRequestsLimit": 5,
    "PropositionsLimitPerTopic": 3000,
    "NewsRequestLimit": 3,
    "DailyRunCron": "0 23 * * *"
  },
  "FileStorage": {
    "Endpoint": "127.0.0.1:9000",
    "AccessKey": "admin",
    "SecretKey": "admin123"
  }
}
